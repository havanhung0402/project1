<h1> Kết Quả Tìm Kiếm </h1>
<div class="container">
    <div class="row">
      <% @post.each do |post| %>
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="product-item">
            <div>
              <div class="image-wrapper">
                <%= link_to image_tag(post.picture), post_path(post) %>
              </div>
              <h3 class="title-course">
                <%= link_to post.title, "#" %>
              </h3>
              <span class="short-text"><%= raw post.content %></span>
              <%= link_to  "Xem",post_path(post), class: "btn-left" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    </div>
  <br>
</div>
