<div id="top">
  <div class="container">
    <div>
    <%= link_to t("views.layouts.Toeic"), root_path, id: t("views.layouts.logo") %>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("views.layouts.Signup"), signup_path %></li>
      <li><%= link_to t("views.layouts.about_us"),"#" %></li>
      <% if logged_in? %>
        <% if current_user.admin? %>
          <li><%= link_to t("views.layouts.user_t"), users_path %></li>
          <li><%= link_to t("views.layouts.post_t"), new_post_path %></li>
          <li><%= link_to t("views.quiz.id_quiz"), questions_path %></li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "views.layouts.account" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("views.layouts.Profile"), current_user %></li>
            <li><%= link_to t("views.layouts.setting"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("views.layouts.logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("views.layouts.login"), login_path %></li>
      <% end %>
    </ul>
  </div>
</div>
<div class="top-menu">
  <ul class="nav navbar-nav navbar-left" id="nav-item">
    <li><%= link_to t("views.layouts.root_t"), root_path, id:"item" %><li/>
    <li><%= link_to t("views.layouts.introduce"), "#{}", id:"item" %><li/>
    <li><%= link_to t("views.layouts.course"), courses_path, id:"item" %><li/>
    <li><%= link_to t("views.quiz.id_quiz"), quizt_path, id:"item" %><li/>
    <li><%= link_to t("views.layouts.teacher"), "#{}", id:"item" %><li/>
    <li><%= link_to t("views.layouts.video_t"), "#{}", id:"item" %><li/>
    <li><%= link_to t("views.layouts.contact"), "#{}", id:"item" %><li/>
  </ul>
<div class="search">
  <%= form_tag("/search", method: "get") do %>
    <%= text_field_tag(:search) %>
    <%= submit_tag(t "views.layouts.search", class: "btn-search") %>
  <% end %>
</div>
</div>
