<div class="quiz-form">
<h1>
<%= t("views.quiz.question_text")%>
<%= @current + 1 %> <%= t("views.quiz.of_text") %>
<%= @total %>
</h1>
<p class="question-quiz" id="question">
<%= @question.text %>
</p>
<div class="question-form">
<%= form_tag({:controller => t("views.quiz.quiz_text"),
              :action => t("views.quiz.answer_text")}) do %>
  <% @choices.each do |choice| %>
   <p class="choice">
    <%= radio_button_tag(:choice, choice.id) %>
    <%= label_tag("".concat(choice.id.to_s).to_sym, choice.text) %>
   </p>
  <% end %>
</div>
  <div class="center">
   <%= submit_tag(t("views.quiz.submit_continue"), :class => t("views.quiz.submit_text")) %>
  </div>
<% end %>
</div>
