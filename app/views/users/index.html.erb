<% provide(:title, t("views.users.all_user_text")) %>
<h1><%= t "views.users.all_user_text" %></h1>
<%= paginate @users %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to t("views.users.delete"), user, method: :delete,
                                  data: { confirm: t("views.users.you_sure") } %>
  <% end %>
    </li>
  <% end %>
</ul>
<%= paginate @users %>
