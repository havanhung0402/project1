<% provide(:title, t("views.users.signup_title")) %>
<div class="container">
  <h1><%= t "views.users.signup_title"%></h1>
<div class="row">
  <div class="col-lg-6 col-md-4 col-md-offset-3 col-sm-2 form">
    <%= form_for(@user, url: signup_path) do |f| %>
    <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name, id: "form-lbl" %>
      <%= f.text_field :name ,class: "form-control" %>

      <%= f.label :email, id: "form-lbl" %>
      <%= f.email_field :email,class: "form-control" %>

      <%= f.label :address, id: "form-lbl" %>
      <%= f.text_field :address, class: "form-control" %>

      <%= f.label :birthday, id: "form-lbl" %>
      <%=  f.date_field :birthday,class: "form-control" %>

      <%= f.label :phone, id: "form-lbl" %>
      <%= f.text_field :phone, class: "form-control" %>

      <%= f.label :password, id: "form-lbl" %>
      <%= f.password_field :password,class: "form-control" %>

      <%= f.label :password_confirmation, t("views.users.Confirmation") %>
      <%= f.password_field :password_confirmation,class: "form-control" %>

      <%= f.submit t("views.users.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
  </div>
</div>
