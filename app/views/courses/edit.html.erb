<div class="container">
  <div class="row">
    <h3><%= t("views.courses.edit_course") %></h3>
  </div>
  <div class="row">
    <%= form_for(@course) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.text_field :title, placeholder: t("views.courses.title_str"), class: "form-control" %>
      <%= f.cktext_area :content, placeholder: t("views.courses.content_str"), class: "form-control" %>
      <div style="margin-top: 15px">
        <div class="col-md-4">
          <%= f.file_field :image, placeholder: t("views.courses.image_str") %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :price, placeholder: t("views.courses.price_str"), class: "form-control" %>
        </div>
        <%= f.select :user_id, options_from_collection_for_select(@users, :id, :name) %>
      </div>    
      <div class="col-md-12 pull-6"><%= f.submit t("views.courses.update_course"), class: "btn btn-primary" %></div>
    <% end %>
  </div>
</div>
