<% provide(:title, t("views.sessions.login")) %>
<h1 id="anim"><%= t "views.sessions.login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3 form">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("views.sessions.login"), class: "btn btn-primary" %>
    <% end %>
    <p>New user? <%= link_to t("views.sessions.signup_now"), signup_path %></p>
  </div>
</div>
